.mentor-show-wrapper{data:{id: '#{current_user.id}'}}
  .top-wrapper
    .photo-wrapper
      .round-photo-wrapper
        = image_tag @mentor.avatar.url(:thumb)
    .greeting-wrapper
      %h2 #{@mentor.name}
      %p #{@mentor.city}
    .mentor-info-wrapper
      %th
        %p USCF ranking: #{@mentor.official_ranking}
      %th
        %p User ranking: #{@mentor.user_ranking}
      %th
        %p City: #{@mentor.city}
      %th
        %p Country: #{@mentor.country}
      %th
        %p #{number_to_currency(@mentor.price)} / class
  - if @conversation.messages.count <= 1
    .button-wrapper
      = link_to 'Message', "#", remote: true, class: 'button', id: 'message-button'
      = link_to 'Request Instruction', new_request_path(recipient_id: @mentor.id), class: 'button small-font'

    .form-wrapper{style: 'margin-top: 130px;'}
  - else
    .button-wrapper
      = link_to 'Request Instruction', new_request_path(recipient_id: @mentor.id), class: 'button small-font', style: 'font-size: 1.2em; padding: 19px 15px; left: 101px; top: 188px; position: absolute; letter-spacing: 1.2px;'

    .form-wrapper{style: 'margin-top: 150px;'}
      = render 'hidden_form'

:javascript
  $(function() {
    $('#message-button').click(function() {
      $('.form-wrapper').html("#{escape_javascript(render 'form')} ");
    });
  });
