= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :sender_id
    = f.number_field :sender_id
  .field
    = f.label :recipient_id
    = f.number_field :recipient_id
  .field
    = f.label :conversation
    = f.text_field :conversation
  .actions
    = f.submit 'Save'
