%h1 Listing requests

%table
  %thead
    %tr
      %th Body
      %th Sender
      %th Recipient
      %th Seen
      %th
      %th
      %th

  %tbody
    - @requests.each do |request|
      %tr
        %td= request.body
        %td= request.sender_id
        %td= request.recipient_id
        %td= request.seen
        %td= link_to 'Show', request
        %td= link_to 'Edit', edit_request_path(request)
        %td= link_to 'Destroy', request, :method => :delete, :data => { :confirm => 'Are you sure?' }

